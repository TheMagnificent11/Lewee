@page "/tables/{TableNumber:int}"

@using MediatR

@inject IMediator Mediator

<h1>Table @this.TableNumber</h1>

@if(this.table == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in this.table.Items)
            {
                <tr>
                    <td>@item.MenuItem.Name</td>
                    <td>@item.MenuItem.PriceLabel</td>
                    <td>@item.Quantity</td>
                    <td>
                        <button @onclick="@(async () => await AddToOrder(item.MenuItem.Id))">Add</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}